#define LED_PIN 18  // ESP32 pin GPIO18 conectado al LED
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_RESET -1
Adafruit_SSD1306 oled(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

const char *ssid = "AP_asix";
const char *password = "AP_asix2023";

AsyncWebServer server(80);

int LED_state = LOW;          // Estado del LED
bool pampalluga_active = false; // Estado del parpadeo
bool morse = false;           // Estado de código Morse (desactivado por defecto)

