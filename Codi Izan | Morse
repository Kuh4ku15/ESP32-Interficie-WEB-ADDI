// Generar HTML para la página web
String getHTML() {
    String html = "<!DOCTYPE HTML>";
    html += "<html>";
    html += "<head>";
    html += "<link rel='icon' href='data:,'>";
    html += "<style>";
    html += "body { font-family: Arial; text-align: center; margin: 20px; }";
    html += ".button { padding: 10px 20px; margin: 10px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; }";
    html += ".on { background-color: green; color: white; }";
    html += ".off { background-color: red; color: white; }";
    html += "</style>";
    html += "</head>";
    html += "<body>";
    html += "<h1>Control del LED</h1>";
    html += "<p>Estado del LED: ";
    html += "<span style='color: " + String(LED_state == HIGH ? "green" : "red") + ";'>";
    html += LED_state == HIGH ? "ENCENDIDO" : "APAGADO";
    html += "</span>";
    html += "</p>";
    html += "<p>Modo Parpadeo: ";
    html += "<span style='color: " + String(pampalluga_active ? "blue" : "grey") + ";'>";
    html += pampalluga_active ? "ACTIVADO" : "DESACTIVADO";
    html += "</span>";
    html += "</p>";
    html += "<p>Codigo Morse: ";
    html += "<span style='color: " + String(morse ? "green" : "grey") + ";'>";
    html += morse ? "ACTIVADO" : "DESACTIVADO";
    html += "</span>";
    html += "</p>";

    // Botones de control del LED
    html += "<a href='/led/on'><button class='button on'>Encender</button></a>";
    html += "<a href='/led/off'><button class='button off'>Apagar</button></a>";
    html += "<br>";

    // Botón para activar/desactivar Pampalluga
    html += "<a href='/led/pampalluga'><button class='button on'>Encender Pampalluga</button></a>";
    html += "<a href='/led/pampalluga_off'><button class='button off'>Apagar Pampalluga</button></a>";
    html += "<br>";

    // Botón para activar/desactivar código Morse
    html += "<a href='/led/morse'><button class='button on'>Encender Morse</button></a>";
    html += "<a href='/led/morse_off'><button class='button off'>Apagar Morse</button></a>";

    html += "<br>";
    html += "<a href='/logo'><button class='button on'>Mostrar Logo</button></a>";
    html += "<a href='/remove_logo'><button class='button off'>Eliminar Logo</button></a>";
    html += "</body>";
    html += "</html>";

    return html;
}

void setup() {
    Serial.begin(115200);

    pinMode(LED_PIN, OUTPUT);
    digitalWrite(LED_PIN, LOW);

    // Configura la comunicación I2C
    Wire.begin(21, 22); // Pines SDA = 21, SCL = 22

    // Inicializa la pantalla OLED con la dirección I2C 0x3C
    if (!oled.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
        Serial.println(F("No se puede iniciar la pantalla OLED SSD1306"));
        while (1);
    }

    oled.clearDisplay();
    oled.setTextSize(1);
    oled.setCursor(0, 0);
    oled.setTextColor(WHITE);

    // Conectar al Wi-Fi
    WiFi.begin(ssid, password);
    while (WiFi.status() != WL_CONNECTED) {
        delay(1000);
        oled.println("Conectando al WiFi...");
        oled.display();
    }
    oled.println("Conectado al WiFi");
    delay(500);
    oled.display();

    // Imprimir la dirección IP del ESP32
    oled.print("ESP32 -> ");
    oled.println(WiFi.localIP());
    oled.display();

    // Página principal
    server.on("/", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /)");
        request->send(200, "text/html", getHTML());
    });

    // Crear servidor web
    server.on("/", HTTP_GET, [](AsyncWebServerRequest *request){
        request->send(200, "text/html", getHTML());
    });

    // Ruta para encender el LED
    server.on("/led/on", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/on)");
        LED_state = HIGH;
        pampalluga_active = false;
        morse = false;
        digitalWrite(LED_PIN, HIGH);
        request->send(200, "text/html", getHTML());
    });

    // Ruta para apagar el LED
    server.on("/led/off", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/off)");
        LED_state = LOW;
        pampalluga_active = false;
        morse = false;
        digitalWrite(LED_PIN, LOW);
        request->send(200, "text/html", getHTML());
    });

    // Ruta para hacer que el LED parpadee
    server.on("/led/pampalluga", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/pampalluga)");
        pampalluga_active = true;
        morse = false;
        request->send(200, "text/html", getHTML());
    });

    server.on("/led/pampalluga_off", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/pampalluga_off)");
        pampalluga_active = false;
        morse = false;
        request->send(200, "text/html", getHTML());
    });

    // Control del código Morse
    server.on("/led/morse", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/morse)");
        morse = true;
        pampalluga_active = false;
        request->send(200, "text/html", getHTML());
    });

    server.on("/led/morse_off", HTTP_GET, [](AsyncWebServerRequest *request) {
        Serial.println("ESP32 Web Server: Nueva solicitud recibida (GET /led/morse_off)");
        morse = false;
        pampalluga_active = false;
        request->send(200, "text/html", getHTML());
    });

    // Mostrar el logo
    server.on("/logo", HTTP_GET, [](AsyncWebServerRequest *request){
        oled.begin(SSD1306_SWITCHCAPVCC, 0x3C);
        oled.clearDisplay();
        oled.drawBitmap(0, 0, logo, SCREEN_WIDTH, SCREEN_HEIGHT, WHITE);
        oled.display();
        request->send(200, "text/html", "<html><body><h1>Logo mostrado</h1><a href='/'>Volver</a></body></html>");
    });

    // Eliminar el logo
    server.on("/remove_logo", HTTP_GET, [](AsyncWebServerRequest *request){
        oled.clearDisplay();
        oled.display();
        request->send(200, "text/html", "<html><body><h1>Logo eliminado</h1><a href='/'>Volver</a></body></html>");
    });

    // Iniciar servidor
    server.begin();
}

void loop() {
  if (pampalluga_active = true) {
    // Alterna el estado del LED si pampalluga está activo
    static unsigned long lastBlinkTime = 0;
    if (pampalluga_active && millis() - lastBlinkTime > 1000) {
        lastBlinkTime = millis();
        LED_state = !LED_state;
        digitalWrite(LED_PIN, LED_state);
     }   
  }
    
  if (morse == true) {
    pampalluga_active = false;
    String morseMessage = ".- .--. .-. ..- . -... .- -- ./... .- .-.. ...- .- -.. --- .-."; 
    for (int i = 0; i < morseMessage.length(); i++) {
      char c = morseMessage.charAt(i); 

      if (morse == true) {
        if (c == '.') {
          digitalWrite(LED_PIN, HIGH);
          delay(300); // Punto: LED encendido 300 ms 
          digitalWrite(LED_PIN, LOW); delay(200); // Espacio entre partes de la misma letra 
        } else if (c == '-') {
          digitalWrite(LED_PIN, HIGH);
          delay(800); // Raya: LED encendido 700 ms 
          digitalWrite(LED_PIN, LOW); delay(200); // Espacio entre partes de la misma letra
        } else if (c == ' ') {
          delay(1000); // Espacio entre letras
        } else if (c == '/') {
          delay(1400); // Espacio entre palabras 
        }        
      } else {
         LED_state = LOW;
         break;
      }
    }
    LED_state = !LED_state;
    digitalWrite(LED_PIN, LED_state);

    morse = false;
  } else {
    LED_state = LOW;
  }
}
